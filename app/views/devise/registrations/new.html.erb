<div class="col-xs-offset-2 col-xs-8 devise-form">
  <h2>
    <%= I18n.t("devise.signs.sign_up") %>
  </h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, error: false %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, I18n.t("devise.buttons.sign_up"),  :class => "pull-right btn-success" %>
    </div>
  <% end %>

</div>
