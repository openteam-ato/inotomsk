<% if current_user %>
  <%= current_user.email %>
  <%= link_to "Workplace", workplace_root_path %>
  <%= link_to "Manage", manage_root_path %>
    <%  if [User, MapLayer, Placemark, Event].map{|e| can?(:read, e)  }.include? true  %>
      <%= link_to I18n.t("devise.buttons.edit_profile"), edit_manage_user_path %>
    <% end %>
  <%= link_to I18n.t("devise.buttons.sign_out"), destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to I18n.t("devise.buttons.log_in"), new_user_session_path %>
<% end %>
