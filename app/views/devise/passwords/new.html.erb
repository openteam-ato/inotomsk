<div class='col-xs-offset-2 col-xs-8 devise-form'>
  <h2><%= I18n.t("devise.signs.password_restore") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }, wrapper: :horizontal_form )do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, I18n.t("devise.buttons.restore_password"), class: "pull-right btn-default" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
