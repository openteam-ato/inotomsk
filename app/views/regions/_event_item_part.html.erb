<div class='event_show'>
  <div class='interval_and_location'>
    <ul>
      <% object.event_entry_properties.each do |event_property| %>
        <li>
          <span class='interval'><%= event_interval(event_property.since, event_property.until).html_safe %></span>
          <span class='location'><%= event_property.location %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='annotation'>
    <%= raw object.annotation %>
  </div>
  <div class='content'>
    <%= raw object.body %>
    <%= render :partial => 'commons/source_link', :locals => { :object => object } %>
  </div>
  <%= render 'commons/social_links' %>
  <%= render 'commons/disqus' %>
</div>

<% content_for :more_like_this do %>
  <ul class='entries'>
    <% object.more_like_this.each do | entry | %>
      <li>
        <% if entry.thumbnail %>
          <div class='image'>
            <%= link_to image_tag_for(entry.thumbnail), entry.link %>
          </div>
        <% end %>
        <div class="title">
          <%= link_to entry.title, entry.link %>
        </div>
        <div class='date'>
          <%= l DateTime.parse(entry.since), :format => '%d %B %Y' %>
          <span class='time'>
            <%= l DateTime.parse(entry.since), :format => '%H:%M' %>
          </span>
        </div>
      </li>
    <% end %>
  </ul>
<% end unless object.more_like_this.blank? %>
