<div class='event_show'>
  <div class='interval_and_location'>
    <ul>
      <% object.event_entry_properties.each do |event_property| %>
        <li>
          <span class='interval'><%= event_interval(event_property.since, event_property.until).html_safe %></span>
          <span class='location'><%= event_property.location %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='annotation'>
    <%= raw object.annotation %>
  </div>
  <div class='content'>
    <%= raw object.body %>
    <%= render :partial => 'commons/source_link', :locals => { :object => object } %>
  </div>
  <%= render 'commons/social_links' %>
  <%= render 'commons/disqus' %>
</div>

