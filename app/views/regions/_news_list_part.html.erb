<div class="entries">
  <% object.items.each do |news| %>
    <div class='entry'>
      <% if news.thumbnail %>
        <div class="image">
          <%= link_to image_tag_for(news.thumbnail), news.link %>
        </div>
      <% end %>
      <div class='description'>
        <p class='title'><%= link_to strip_tags(news.title), news.link %></p>
        <p class='date'>
          <%= l DateTime.parse(news.since), :format => "%d %B %Y" %>
          <span class='time'>
            <%= l DateTime.parse(news.since), :format => "%H:%M" %>
          </span>
        </p>
        <p class='annotation'>
          <%= raw news.annotation %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<% if object.pagination %>
  <% @array = object.items %>
  <% @array = Kaminari.paginate_array(@array, :total_count => object.pagination.total_count).page(object.pagination.current_page).per(object.pagination.per_page) %>
  <%= paginate @array, :param_name => object.pagination.param_name, :outer_window => 3 %>
<% end %>
