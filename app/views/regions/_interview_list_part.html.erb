<div class="interviews">
  <% object.items.each_slice(3) do |slice| %>
    <ul>
      <% slice.each do | interview | %>
        <li>
          <% if interview.images.any? %>
            <div class="image">
              <%= link_to image_tag_for(interview.images.first.thumbnail), interview.link %>
              <div class="stub"></div>
            </div>
          <% end %>
          <div class='description'>
            <%= raw interview.annotation %>
            <p class='title'><%= link_to strip_tags(interview.title), interview.link %></p>
            <p class='date'>
              <%= l DateTime.parse(interview.since), :format => "%d %B %Y" %>
              <span class='time'>
                <%= l DateTime.parse(interview.since), :format => "%H:%M" %>
              </span>
            </p>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<% if object.pagination %>
  <% @array = object.items %>
  <% @array = Kaminari.paginate_array(@array, :total_count => object.pagination.total_count).page(object.pagination.current_page).per(object.pagination.per_page) %>
  <%= paginate @array, :param_name => object.pagination.param_name, :outer_window => 3 %>
<% end %>
