<% content_for :content do %>
  <div class='content_wrapper index row directions_wrapper'>
    <div class="content_side col-lg-10 col-md-9 col-sm-8 col-xs-12 map_page_wrapper">

      <div class='header row'>
        <div class="header_wrapper col-lg-6 col-md-6 col-sm-5 col-xs-12">
          <%= content_tag :h1, @content_first.part_title %>
        </div>
      </div>

      <%= render_partial_for_region(@content_first) %>

      <div class="map_wrapper col-lg-12 col-md-12" data-latitude='58.62889684478054' data-longitude='82.06246307966687'>
        <div class="map"></div>
        <p>
          Для уточнения места расположения объекта увеличьте масштаб карты
        </p>
      </div>

      <div class="row placemark_list">
        <table class="table table-striped table-hover visible-xs visible-sm">
          <% @placemarks.each do |placemark| %>
            <tr>
              <td colspan="2" class="layer_header"><%= key %></td>
            </tr>
            <% value.each do |placemark| %>
              <% placemark.addresses.each_with_index do |address, index| %>
                <tr class="placemark_list_item <%= index !=0 ? 'hidden' : '' %>" data-latitude=<%= address.latitude %> data-longitude=<%= address.longitude %> data-icon=<%= layer_icon(placemark.map_layer) %> data-title="<%= placemark.title %>" data-logotype=<%= placemark_logotype(placemark) %>>
                  <td>
                    <%= image_tag layer_icon(placemark.map_layer) %>
                  </td>
                  <td>
                    <%= placemark.title %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
        </table>
      </div>

    </div>
  </div>
<% end %>
