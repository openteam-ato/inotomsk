<!DOCTYPE HTML>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="UTF-8">
    <title><%= strip_tags(@page_title) %> | <%= strip_tags(@site_name.content.body) %></title>
    <%= yield :head_rss_link %>
    <%= favicon_link_tag %>
    <meta name='yandex-verification' content='6e7c8aa47cfa8b4f' />
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 8]>
    <%= stylesheet_link_tag    'ie_lower_8' %>
    <%= stylesheet_link_tag    'stop_ie/application' %>
    <%= javascript_include_tag 'stop_ie/application' %>
    <![endif]-->
    <!--[if IE 6]>
    <%= stylesheet_link_tag    'ie_6' %>
    <![endif]-->
    <%= csrf_meta_tags %>
    <% if entry_date %>
      <meta name="entry_date" content="<%= entry_date %>">
    <% end %>
  </head>
  <body>

    <div class='top_menu_wrapper noindex'>
      <div class='top_menu <%= I18n.locale %>'>
        <%= render :partial => "regions/main_navigation", :locals => { :object => @main_top_navigation.content, :klass => 'first' } if @main_top_navigation %>
        <%= render :partial => "regions/main_navigation", :locals => { :object => @main_bottom_navigation.content, :klass => 'second' } if @main_bottom_navigation %>
      </div>
    </div>

    <div class='header noindex'>
      <div class='logotype'>
        <div class='symbol'>
          <a href='/<%= I18n.locale %>/'><%= t "ino_tomsk_2020" %></a>
        </div>
        <div class='site_name'>
          <h1><a href='/<%= I18n.locale %>/'><%= t "ino" %><span class='medium'><%= t "tomsk_2020" %></span></a></h1>
          <p class='shift'><%= t "federal_centre_education" %></p>
          <p><%= t "research_and_development" %></p>
        </div>
      </div>
      <div class="languages">
        <%= languages %>
      </div>
      <div class="search_form">
        <form action="/<%= I18n.locale %>/search">
          <ul class="inputs">
            <li>
              <input type="text" name="parts_params[search][q]" value='<%= params[:parts_params].present? && params[:parts_params][:search].present? ? params[:parts_params][:search][:q] : nil %>'>
            </li>
          </ul>
          <ul class="buttons">
            <li>
              <input type="submit" value="искать">
            </li>
          </ul>
        </form>
      </div>
      <div class='targets'>
        <% unless @targets.blank? %>
          <div class='left'>
            <a href='#'><%= t('views.pagination.previous') %></a>
          </div>
          <div class="container">
            <%= render_partial_for_region(@targets) %>
          </div>
          <div class='right'>
            <a href='#'><%= t('views.pagination.next') %></a>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield(:content) %>

    <div class='footer_wrapper noindex'>
      <div class='footer'>
        <div class='column logotype_<%= I18n.locale %>'>
          <p><%= t "ino_tomsk_2020" %></p>
        </div>
        <div class='column address'>
          <p>&laquo;<%= t "ino_tomsk_2020" %>&raquo;</p>
          <p><%= raw t("ino_tomsk_address") %></p>
        </div>
        <div class='column contacts'>
          <p><%= t "tel" %> (3822) <span class='bolder'>46 47 48</span></p>
          <p>email: <a href='mailto:'>inso@inotomsk.ru</a></p>
          <div class='social_links'>
            <a class='twitter' href='https://twitter.com/INOTomsk2020' target='_blank'>Twitter</a>
            <a class='vkontakte' href='https://vk.com/inotomsk2020' target='_blank'>В Контакте</a>
            <a class='facebook' href='https://www.facebook.com/INOTomsk2020' target='_blank'>Facebook</a>
            <a class='youtube' href='https://www.youtube.com/user/INOTomsk' target='_blank'>You tube</a>
          </div>
        </div>
        <div class='column developers'>
          <p><%= t "development" %>: <a href='http://openteam.ru/'>OpenTeam</a></p>
          <p><%= t "design" %>: <a href='http://rosbd.com/'>РосБизнесДизайн</a></p>
        </div>
      </div>
    </div>

    <% if Rails.env.production? && request.host.eql?("inotomsk.openteam.ru") %>
      <!-- Yandex.Metrika counter -->
      <script type="text/javascript">
      (function (d, w, c) {
        (w[c] = w[c] || []).push(function() {
          try {
            w.yaCounter14929507 = new Ya.Metrika({id:14929507, enableAll: true, webvisor:true});
          } catch(e) {}
        });

        var n = d.getElementsByTagName("script")[0],
            s = d.createElement("script"),
            f = function () { n.parentNode.insertBefore(s, n); };
        s.type = "text/javascript";
        s.async = true;
        s.src = (d.location.protocol == "https:" ? "https:" : "http:") + "//mc.yandex.ru/metrika/watch.js";

        if (w.opera == "[object Opera]") {
          d.addEventListener("DOMContentLoaded", f);
        } else { f(); }
      })(document, window, "yandex_metrika_callbacks");
      </script>
      <noscript><div><img src="//mc.yandex.ru/watch/14929507" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
      <!-- /Yandex.Metrika counter -->
    <% end %>

  </body>
</html>
