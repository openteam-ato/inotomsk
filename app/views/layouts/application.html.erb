<!DOCTYPE html PUBLIC '-//W3C//DTD XHTML 1.1//EN' 'http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd'>
<html xmlns='http://www.w3.org/1999/xhtml' xml:lang='ru'>
  <head>
    <meta http-equiv='Content-Type' content='text/html;charset=UTF-8' />
    <title><%= strip_tags(@page_title) %> | <%= strip_tags(@site_name.content.body) %></title>
    <%= yield :head_rss_link %>
    <%= favicon_link_tag %>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 8]>
    <%= stylesheet_link_tag    'ie_lower_8' %>
    <%= stylesheet_link_tag    'stop_ie/application' %>
    <%= javascript_include_tag 'stop_ie/application' %>
    <![endif]-->
    <!--[if IE 6]>
    <%= stylesheet_link_tag    'ie_6' %>
    <![endif]-->
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class='top_menu_wrapper noindex'>
      <div class='top_menu <%= I18n.locale %>'>
        <%= render :partial => "regions/main_navigation", :locals => { :object => @main_top_navigation.content, :klass => 'first' } if @main_top_navigation %>
        <%= render :partial => "regions/main_navigation", :locals => { :object => @main_bottom_navigation.content, :klass => 'second' } if @main_bottom_navigation %>
      </div>
    </div>

    <div class='header noindex'>
      <div class='logotype'>
        <div class='symbol'>
          <a href='/<%= I18n.locale %>/'><%= t "ino_tomsk_2020" %></a>
        </div>
        <div class='site_name'>
          <h1><a href='/<%= I18n.locale %>/'><%= t "ino" %><span class='medium'><%= t "tomsk_2020" %></a></h1>
          <p class='shift'><%= t "federal_centre_education" %></p>
          <p><%= t "research_and_development" %></p>
        </div>
      </div>
      <div class="languages">
        <%= languages %>
      </div>
      <div class="search_form">
        <form action="/<%= I18n.locale %>/search">
          <ul class="inputs">
            <li>
              <input type="text" name="parts_params[search][q]" value='<%= params[:parts_params].try(:[], "search").try(:[], "q") %>'>
            </li>
          </ul>
          <ul class="buttons">
            <li>
              <input type="submit" value="искать">
            </li>
          </ul>
        </form>
      </div>
      <div class='targets'>
        <% unless @targets.blank? %>
          <div class='left'>
            <a href='#'>назад</a>
          </div>
          <div class="container">
            <%= render_partial_for_region(@targets) %>
          </div>
          <div class='right'>
            <a href='#'>вперед</a>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield(:content) %>

    <div class='banners_section noindex'>
      <p><a href='#'><img src='/assets/fake/adv_1.jpg' alt='' width='296' height='84' /></a></p>
      <p><a href='#'><img src='/assets/fake/adv_2.jpg' alt='' width='296' height='84' /></a></p>
      <p><a href='#'><img src='/assets/fake/adv_3.jpg' alt='' width='296' height='84' /></a></p>
      <p class='break'>&nbsp;</p>
    </div>

    <div class='footer_wrapper noindex'>
      <div class='footer'>
        <div class='column logotype_<%= I18n.locale %>'>
          <p><%= t "ino_tomsk_2020" %></p>
        </div>
        <div class='column address'>
          <p>&laquo;<%= t "ino_tomsk_2020" %>&raquo;</p>
          <p><%= raw t("ino_tomsk_address") %></p>
        </div>
        <div class='column contacts'>
          <p><%= t "tel" %> (3822) <span class='bolder'>46 47 48</span></p>
          <p>email: <a href='mailto:'>inso@inotomsk.ru</a></p>
          <div class='social_links'>
            <a class='youtube' href='#'>You tube</a>
            <a class='livejournal' href='#'>Live journal</a>
            <a class='vkontakte' href='#'>В Контакте</a>
            <a class='twitter' href='#'>Twitter</a>
            <a class='facebook' href='#'>Facebook</a>
          </div>
        </div>
        <div class='column developers'>
          <p><%= t "development" %>: <a href='http://openteam.ru/'>OpenTeam</a></p>
          <p><%= t "design" %>: <a href='http://rosbd.com/'>РосБизнесДизайн</a></p>
        </div>
      </div>
    </div>

  </body>
</html>
