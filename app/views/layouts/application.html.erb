<!DOCTYPE html PUBLIC '-//W3C//DTD XHTML 1.1//EN' 'http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd'>
<html xmlns='http://www.w3.org/1999/xhtml' xml:lang='ru'>
  <head>
    <meta http-equiv='Content-Type' content='text/html;charset=UTF-8' />
    <title><%= strip_tags(@page_title) %> | <%= strip_tags(@site_name.content.body) %></title>
    <%= yield :head_rss_link %>
    <%= favicon_link_tag %>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 8]>
    <%= stylesheet_link_tag    'ie_lower_8' %>
    <%= stylesheet_link_tag    'stop_ie/application' %>
    <%= javascript_include_tag 'stop_ie/application' %>
    <![endif]-->
    <!--[if IE 6]>
    <%= stylesheet_link_tag    'ie_6' %>
    <![endif]-->
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class='top_menu_wrapper'>
      <div class='top_menu'>
        <%= render :partial => "regions/main_navigation", :locals => { :object => @main_top_navigation.content, :klass => 'first' } if @main_top_navigation %>
        <%= render :partial => "regions/main_navigation", :locals => { :object => @main_bottom_navigation.content, :klass => 'second' } if @main_bottom_navigation %>
      </div>
    </div>

    <div class='header'>
      <div class='logotype'>
        <div class='symbol'>
          <a href='/<%= @current_lang %>/'><%= t "#{@current_lang}.ino_tomsk_2020" %></a>
        </div>
        <div class='site_name'>
          <h1><a href='/<%= @current_lang %>/'><%= t "#{@current_lang}.ino" %><span class='medium'><%= t "#{@current_lang}.tomsk_2020" %></a></h1>
          <p class='shift'><%= t "#{@current_lang}.federal_centre_education" %></p>
          <p><%= t "#{@current_lang}.research_and_development" %></p>
        </div>
      </div>
      <div class="languages">
        <%= languages %>
      </div>
      <div class='targets'>
        <div class='left'>
          <a href='#'>назад</a>
        </div>
        <div class="container">
          <%= render_partial_for_region(@targets) %>
        </div>
        <div class='right'>
          <a href='#'>вперед</a>
        </div>
      </div>
    </div>

    <%= yield(:content) %>

    <div class='banners_section'>
      <p><a href='#'><img src='/assets/fake/adv_1.jpg' alt='' width='296' height='84' /></a></p>
      <p><a href='#'><img src='/assets/fake/adv_2.jpg' alt='' width='296' height='84' /></a></p>
      <p><a href='#'><img src='/assets/fake/adv_3.jpg' alt='' width='296' height='84' /></a></p>
      <p class='break'>&nbsp;</p>
    </div>

    <div class='footer_wrapper'>
      <div class='footer'>
        <div class='column logotype_<%= @current_lang %>'>
          <p><%= t "#{@current_lang}.ino_tomsk_2020" %></p>
        </div>
        <div class='column address'>
          <p>&laquo;<%= t "#{@current_lang}.ino_tomsk_2020" %>&raquo;</p>
          <p><%= t "#{@current_lang}.ino_tomsk_address" %></p>
        </div>
        <div class='column contacts'>
          <p><%= t "#{@current_lang}.tel" %> (3822) <span class='bolder'>46 47 48</span></p>
          <p>email: <a href='mailto:'>inso@inotomsk.ru</a></p>
          <div class='social_links'>
            <a class='youtube' href='#'>You tube</a>
            <a class='livejournal' href='#'>Live journal</a>
            <a class='vkontakte' href='#'>В Контакте</a>
            <a class='twitter' href='#'>Twitter</a>
            <a class='facebook' href='#'>Facebook</a>
          </div>
        </div>
        <div class='column developers'>
          <p><%= t "#{@current_lang}.development" %>: <a href='http://openteam.ru/'>OpenTeam</a></p>
          <p><%= t "#{@current_lang}.design" %>: <a href='http://rosbd.com/'>РосБизнесДизайн</a></p>
        </div>
      </div>
    </div>

  </body>
</html>
