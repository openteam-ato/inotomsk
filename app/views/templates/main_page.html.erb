<% content_for :content do %>

  <div class='news_section'>
    <ul class='nav'>
      <li><a href='/ru/press-tsentr/novosti-innovatsiy/v-mire/'>В мире</a></li>
      <li><a href='/ru/press-tsentr/novosti-innovatsiy/v-rossii/'>В России</a></li>
      <li class='selected'><a href='/ru/press-tsentr/novosti-innovatsiy/v-tomske/'>В Томске</a></li>
    </ul>
    <h1><a href='/ru/press-tsentr/novosti-innovatsiy/v-tomske/'>Новости</a></h1>
    <div class='news_container'>
      <div class='inner_wrapper'>
        <div class='picture'>
          <div class='img'><img src='/assets/fake/caltonhilledinburgh.jpg' alt='' width='459' height='344' /></div>
          <div class='description'>
            <p class='text'>Структурный голод столь же важен для жизни, как и архетип понимает возрастной экстремум функции, откуда следует доказываемое равенство.</p>
            <p class='date'>11 ноября 2011</p>
          </div>
        </div>
        <div class='news_list'>
          <% unless @news_list.blank? %>
            <ul>
              <% @news_list.content.items.each do | news | %>
                <li>
                  <p class='title'><%= link_to news.title, news.link %></p>
                  <p class='date'>
                    <%= l DateTime.parse(news.since), :format => "%d %B %Y" %>
                    <span class='time'>
                      <%= l DateTime.parse(news.since), :format => "%H:%M" %>
                    </span>
                  </p>
                </li>
              <% end %>
            </ul>
          <% end %>
          <p class='all_news'><a href='/ru/press-tsentr/novosti-innovatsiy/v-tomske/'>Все новости</a></p>
        </div>
      </div>
    </div>
  </div>

  <div class='interviews_section'>
    <h1><a href='/ru/analiticheskie-materialy/intervyu-s-ekspertami/'>Интервью</a></h1>
    <% unless @interview_list.blank? %>
      <ul>
      <% @interview_list.content.items.each do | interview | %>
        <li>
          <% if interview.resized_image_url %>
            <div class="image">
              <%= link_to news_image(interview.resized_image_url, interview.image_description), interview.link %>
              <div class="stub"></div>
            </div>
          <% end %>
          <div class='description'>
            <%= raw interview.annotation %>
            <p class='title'><%= link_to interview.title, interview.link %></p>
            <p class='date'>
              <%= l DateTime.parse(interview.since), :format => "%d %B %Y" %>
              <span class='time'>
                <%= l DateTime.parse(interview.since), :format => "%H:%M" %>
              </span>
            </p>
          </div>
        </li>
      <% end %>
      </ul>
    <% end %>
  </div>

  <div class='belief_section'>
    <h1><a href='/ru/tochka-zreniya/mneniya-o-proekte'>Точки зрения</a></h1>
    <div class='two_column'>
      <% first = @belief_list.content.items.first %>
      <% second = @belief_list.content.items.second %>
      <% third = @belief_list.content.items.third %>
      <div class='belief'>
        <div class='photo first'>
          <%= link_to news_image(first.resized_image_url, first.image_description), first.link %>
          <span class='triangle'></span>
        </div>
        <div class='description first'>
          <p class='annotation'><%= link_to truncate(first.title, :length => 130, :separator => ' '), first.link %></p>
          <p class='date'><%= l DateTime.parse(first.since), :format => "%d %B %Y" %></p>
        </div>
        <div class='photo second'>
          <%= link_to news_image(second.resized_image_url, second.image_description), second.link %>
          <span class='triangle'></span>
        </div>
        <div class='description second'>
          <p class='annotation'><%= link_to truncate(third.title, :length => 130, :separator => ' '), third.link %></p>
          <p class='date'><%= l DateTime.parse(third.since), :format => "%d %B %Y" %></p>
        </div>
        <div class='photo third'>
          <%= link_to news_image(third.resized_image_url, third.image_description), third.link %>
          <span class='triangle'></span>
        </div>
        <div class='description third'>
          <p class='annotation'><%= link_to truncate(second.title, :length => 130, :separator => ' '), second.link %></p>
          <p class='date'><%= l DateTime.parse(second.since), :format => "%d %B %Y" %></p>
        </div>
      </div>
      <div class='mediateka'>
        <h2><a href='#'>Медиатека</a></h2>
        <div class='two_column'>
          <div class='video'>
            <div class='thumbnail'>
              <a href='#'><img src='/assets/fake/video.jpg' alt='' width='160' height='120' /></a>
            </div>
            <p class='title'>Сколково: новый век</p>
            <p class='date'>10 августа, ТВ2, Часпик</p>
            <p class='more'><a href='#'>Всё видео</a></p>
          </div>
          <div class='photo'>
            <div class='thumbnail'>
              <a href='#'><img src='/assets/fake/photo.jpg' alt='' width='176' height='116'/></a>
            </div>
            <p class='title'>Презентация &laquo;Машинстройкомплекта&raquo; в Томской области</p>
            <p class='date'>23 октября</p>
            <p class='more'><a href='#'>Всё фото</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class='calendar_section'>
    <div class='calendar'>
      <h1><a href='#'>Календарь мероприятий</a></h1>
      <div class='left'>
        <a href='#'>назад</a>
      </div>
      <div class='right'>
        <a href='#'>вперёд</a>
      </div>
      <div class='timeline'>
        <div class='event'>
          <p class='day'>14 августа - 15 сентября</p>
          <p class='year'>2012г.</p>
          <p class='separator'>&nbsp;</p>
          <p class='title'>
            <a href='#'>Молодёжный форум You LEAD</a>
          </p>
        </div>
        <div class='event'>
          <p class='day'>14-15 августа</p>
          <p class='year'>2012г.</p>
          <p class='separator'>&nbsp;</p>
          <p class='title'>
            <a href='#'>Собрание акционеров Восток Газпром</a>
          </p>
        </div>
        <div class='event'>
          <p class='day'>14-15 августа</p>
          <p class='year'>2012г.</p>
          <p class='separator'>&nbsp;</p>
          <p class='title'>
            <a href='#'>В Томске пройдёт Форум бизнес-лидеров</a>
          </p>
        </div>
        <div class='event'>
          <p class='day'>14-15 августа</p>
          <p class='year'>2012г.</p>
          <p class='separator'>&nbsp;</p>
          <p class='title'>
            <a href='#'>Всероссийский студенческий форум</a>
          </p>
        </div>
      </div>
    </div>
    <div class='voting'>
      <h1>Опрос</h1>
      <p class='question'>Каким на Ваш взгляд должен быть ИНО Томск 2020г.?</p>
      <%= semantic_form_for :answers do | form | %>
        <%= form.inputs do %>
          <%= form.input :ansver, :as => :radio, :label => false,
            :collection => {
            'Как силиконовая долина' => 'uno',
            'Ничего не изменится' => 'dos',
            'Затрудняюсь я с вами тут' => 'tres' } %>
        <% end %>
        <%= form.actions do %>
          <%= form.action :submit, :label => 'Голосовать' %>
        <% end %>
      <% end %>
      <p class='link'><a href='#'>Результаты</a></p>
      <p class='link'><a href='#'>Голосование по другим вопросам</a></p>
    </div>
  </div>

<% end %>

<%= render :template => 'layouts/application' %>
