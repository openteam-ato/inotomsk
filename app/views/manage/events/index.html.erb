<div class="row index_wrapper">
  <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
    <h4 class="pull-right">
      <%= link_to new_manage_event_path do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span>Новое событие</span>
      <% end %>
    </h4>
    <div class="filter">
      <%= link_to "Все мероприятия", manage_events_path, class: "all #{selected_filter('all')}" %>
      <%= link_to "Реализованные", manage_events_path(state: "implemented"), class: "bg-success #{selected_filter('implemented')}" %>
      <%= link_to "Реализуемые", manage_events_path(state: "now"), class: "bg-info #{selected_filter('now')}" %>
      <%= link_to "Отложено", manage_events_path(state: "postponed"), class: "bg-warning #{selected_filter('postponed')}" %>
    </div>
    <% if @events.present? %>
      <table class="table table-striped table-hover">
        <thead>
          <th>Наименование мероприятия</th>
          <th>Вид документа</th>
          <th>Срок</th>
          <th>Ответственный исполнитель</th>
          <th></th>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr class=<%= event_row_color(event)%>>
              <td><%= link_to event.title, edit_manage_event_path(event) %></td>
              <td><%= event.document_type %></td>
              <td><%= human_term(event) %></td>
              <td><%= event.performer %></td>
              <td><%= link_to "Удалить", manage_event_path(event), method: :delete, confirm: "Уверены?" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="event_pagination">
        <%= paginate @events %>
      </div>
    <% else %>
      <h4 class="center-block no_events">Вы еще не добавили ни одного события</h4>
    <% end %>
  </div>
</div>
