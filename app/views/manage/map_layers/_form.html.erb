<div class="form_wrapper">
  <ol class="breadcrumb">
    <%= render_breadcrumbs tag: :li, separator: '' %>
  </ol>
  <%= simple_form_for [:manage, @map_layer], html: {class: 'form-vertical' } do |f| %>
    <div class="form-group">
      <%= f.input :title %>
    </div>
    <div class="form-group">
      <%= f.input :ancestry, collection: MapLayer.roots, label_method: :title, value_method: :id %>
    </div>
    <div class="form-group">
      <%= f.input :visible %>
    </div>
    <div class="form-group">
      <%= f.input :icon, :as => :file %>
      <%= image_tag layer_icon(@map_layer), class: 'preview_image' %>
    </div>
    <div class="form-group">
      <%= f.input :hover_icon, :as => :file %>
      <%= image_tag layer_icon(@map_layer,'hover_'), class: 'preview_image' %>
    </div>
    <%= f.submit 'Сохранить', class: "pull-right" %>
  <% end %>
</div>

