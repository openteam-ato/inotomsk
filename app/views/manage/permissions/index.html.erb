<div class="row permission_wrapper">
  <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
    <table class="table table-striped table-hover">
      <thead>
        <th>Имя пользователя</th>
        <th>Права</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td>
              <% if user.permissions.any? %>
                <div class="pull-right"><%= link_to "Добавить права", new_manage_permission_path(user_id: user.id) %></div>
                <ul>
                  <% user.permissions.each do |permission| %>
                    <li>
                      <%= I18n.t("role.#{permission.role}") %>
                      (<%= (link_to "Удалить", manage_permission_path(permission), method: :delete, confirm: "Уверены?") %>)
                    </li>
                  <%  end %>
                </ul>
              <% else %>
                <div class="pull-right"><%= link_to "Добавить права", new_manage_permission_path(user_id: user.id) %></div>
                <div>У этого пользователя нет прав</div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
